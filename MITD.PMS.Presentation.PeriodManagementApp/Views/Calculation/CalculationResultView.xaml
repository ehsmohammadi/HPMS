<pr:ViewBase  
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    x:Class="MITD.PMS.Presentation.PeriodManagementApp.Views.CalculationResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FlowDirection="RightToLeft"
    d:DesignHeight="300" d:DesignWidth="400" 
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:pr="clr-namespace:MITD.Presentation.UI;assembly=MITD.Presentation.UI.SL"
    d:DataContext="{StaticResource calculationResultViewModel}">
    <pr:ViewBase.Resources>

    </pr:ViewBase.Resources>
    <ScrollViewer BorderThickness="0"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Name="LayoutRoot"  Background="Transparent"  >
            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">

                <sdk:Label  Content="نام دوره:" Margin="5"/>
                <pr:ComboBoxEx  Width="150" Margin="5" HorizontalAlignment="Left" 
                             DisplayMemberPath="Name" 
                             ItemsSource="{Binding Path=PeriodsWithDeteministicCalculation, Mode=TwoWay}" 
                             SelectedItem="{Binding Mode=TwoWay, Path=SelectedPeriod}">
                    <pr:ComboBoxEx.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </pr:ComboBoxEx.ItemsPanel>
                </pr:ComboBoxEx>

            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal">

                <sdk:Label  Content="نام فرد:" Margin="5"/>
                <sdk:Label  Content="{Binding Path=EmployeeCalcTotalScore.EmployeeName}" />

                <sdk:Label  Content="نام دوره:" Margin="5"/>
                <sdk:Label Content="{Binding Path=SelectedPeriod.Name}"/>

                <sdk:Label  Content="نام محاسبه:" Margin="5"/>
                <sdk:Label  Content="{Binding Path=Calculation.Name}"/>

                <sdk:Label  Content="روش محاسبه:" Margin="5"/>
                <sdk:Label  Content="{Binding Path=Calculation.PolicyName}"/>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal">

                <sdk:Label  Content="نمره نهایی:" Margin="5"/>
                <sdk:Label  Content="{Binding Path=EmployeeCalcTotalScore.TotalScore}" />


                <sdk:Label  Content="رتبه در دوره:" Margin="5"/>
                <sdk:Label  Content="{Binding Path=EmployeeCalcTotalScore.EmployeeRankInPeriod}" />

                <!--<Button Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding Path=ClaimRequest.Command}" 
                        Content="{Binding Path=ClaimRequest.DisplayName}"
                        Visibility="{Binding Path=VisibleRequestClaim,Converter={StaticResource VisibilityConverter}}" 
                        >
                </Button>-->
            </StackPanel>


            <StackPanel Grid.Row="3"  Orientation="Horizontal"  >
                <sdk:DataGrid  Name="drgList" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Disabled"   SelectionMode="Single" IsReadOnly="True"
                                RowDetailsVisibilityMode="Visible"    ItemsSource="{Binding Path=EmployeeCalcTotalScore.JobPositionValues,Mode=OneWay}" >

                    <sdk:DataGrid.Columns>
                        <sdk:DataGridTextColumn Header="سمت"  CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="*" Binding="{Binding Path=Name}"  />
                    </sdk:DataGrid.Columns>


                    <sdk:DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border BorderBrush="white" Background="OldLace"  BorderThickness="2" Padding="5">
                                <StackPanel  Orientation="Horizontal" Background="White" Height="Auto"  Margin="10,5"  >

                                    <Grid   Background="Transparent">
                                        <Grid.RowDefinitions >
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <sdk:Label Grid.Row="0" Content="نمرات نهایی شغل:"></sdk:Label>
                                        <sdk:DataGrid  Grid.Row="1" Margin="10,3"  Name="drgLJobFinalPoints" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True"
                                                  RowDetailsVisibilityMode="Visible"   ItemsSource="{Binding Path=JobPoints,Mode=OneWay}"  >
                                            <sdk:DataGrid.Columns>
                                                <sdk:DataGridTextColumn Header="عنوان" CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="Auto" Binding="{Binding Path=Name}"  />
                                                <sdk:DataGridTextColumn Header="نمره" CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="*" Binding="{Binding Path=Value}"  />
                                            </sdk:DataGrid.Columns>
                                        </sdk:DataGrid>

                                        <sdk:Label Grid.Row="2" Content="شاخص ها و نمرات آنها:"></sdk:Label>
                                        <sdk:DataGrid Grid.Row="3" Margin="10,3,10,10" Name="drgListJobIndexPoints" AutoGenerateColumns="False"  SelectionMode="Single" IsReadOnly="True"
                                                 RowDetailsVisibilityMode="Visible"    ItemsSource="{Binding Path=JobIdexPoints,Mode=OneWay}" >

                                            <sdk:DataGrid.Columns>
                                                <sdk:DataGridTextColumn Header="نام شاخص " CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="*" Binding="{Binding Path=JobIndexName}"  />
                                            </sdk:DataGrid.Columns>
                                            <sdk:DataGrid.RowDetailsTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="white" Background="PapayaWhip"  BorderThickness="2" Padding="5">
                                                        <StackPanel Orientation="Horizontal" Height="Auto"  Background="White"  Margin="10,5,10,10">
                                                            <sdk:DataGrid  Name="drgLIndexPoints" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True"
                                                                    ItemsSource="{Binding Path=IndexPoints,Mode=OneWay}" >
                                                                <sdk:DataGrid.Columns>
                                                                    <sdk:DataGridTextColumn Header="عنوان" CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="Auto" Binding="{Binding Path=Name}"  />
                                                                    <sdk:DataGridTextColumn Header="نمره" CanUserReorder="True" CanUserResize="True" CanUserSort="True" Width="Auto" Binding="{Binding Path=Value}"  />
                                                                </sdk:DataGrid.Columns>
                                                            </sdk:DataGrid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </sdk:DataGrid.RowDetailsTemplate>
                                        </sdk:DataGrid>


                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </sdk:DataGrid.RowDetailsTemplate>

                </sdk:DataGrid>

            </StackPanel>


        </Grid>
    </ScrollViewer>
</pr:ViewBase>
